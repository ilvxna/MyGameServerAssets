<root>
	<Properties>
		<characters>
			<Type> AVATAR_INFO_LIST </Type>
			<Flags> BASE </Flags>
			<Persistent> true </Persistent>
		</characters>
        <activeAvatar>
            <Type>          MAILBOX             </Type>
            <Flags>         BASE                </Flags>
        </activeAvatar>
        <!-- 玩家状态 -->
          <avatarState>
        <Type> UINT8 </Type>
        <Flags> BASE </Flags>
    </avatarState>
    <activeAvatarId>
      <Type> UINT32 </Type>
      <Flags> BASE_AND_CLIENT </Flags>
      <Default> 0 </Default>
    </activeAvatarId>

    <!--avatar退出标记-->
    <avatarQuitFlag>
      <Type> UINT8 </Type>
      <Flags> BASE </Flags>
      <Default> 0 </Default>
    </avatarQuitFlag>
    <!-- 帐号状态 -->
    <state>
      <Type> UINT8 </Type>
      <Flags> BASE </Flags>
      <Default> 0 </Default>
    </state>
	</Properties>

	<ClientMethods>
        <onReqAvatarList>
            <Arg>   AVATAR_INFO_LIST   </Arg>
        </onReqAvatarList>

        <onCreateAvatarResult>
           <Arg>UINT8</Arg>
           <Arg>AVATAR_INFO</Arg>
        </onCreateAvatarResult>
    
    <OnCreateCharacterResp>
      <Arg>  UINT8 </Arg>
      <!-- error id -->
      <Arg>  UINT64 </Arg>
      <!-- character id -->
    </OnCreateCharacterResp>
        <onRemoveAvatar>
            <Arg>   DBID        </Arg>
        </onRemoveAvatar>
        <OnLoginResp>
      <Arg>  UINT8 </Arg>
      <!-- error id -->
    </OnLoginResp>

	</ClientMethods>

	<BaseMethods>
        <reqAvatarList>
            <Exposed/>
        </reqAvatarList>
        <reqCreateAvatar>
        	<Arg>UNICODE</Arg>
            <Arg>UINT8</Arg>
            <Exposed/>
        </reqCreateAvatar>
        <reqRemoveAvatar>
            <Exposed/>
            <Arg>   UNICODE </Arg>  <!-- name --> 
        </reqRemoveAvatar>
        <selectAvatarGame>
            <Exposed/>
            <Arg>   DBID    </Arg>  <!-- dbid -->
        </selectAvatarGame>
	</BaseMethods>

	<CellMethods>
	</CellMethods>

</root>
